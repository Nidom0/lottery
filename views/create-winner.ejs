<%- include('partials/navbar') %>

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
<meta charset="UTF-8">
<title>ایجاد برنده جدید</title>

<link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
  body {
    margin: 0;
    background: linear-gradient(135deg,#0d0f1b,#13172b,#141a33);
    font-family: Vazirmatn;
    color: #fff;
    padding-top: 120px;
  }

  .page-wrapper {
    max-width: 1350px;
    margin: auto;
    display: flex;
    gap: 25px;
    padding: 20px;
  }

  /* کارت گلس */
  .glass {
    background: rgba(255,255,255,0.06);
    border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(16px);
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 15px 38px rgba(0,0,0,0.35);
  }

  /* ستون سمت راست (فرم) */
  .form-box {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .form-box h2 {
    margin-bottom: 25px;
    color: #7ec7ff;
  }

  label {
    display: block;
    margin-top: 12px;
    margin-bottom: 6px;
    font-size: 15px;
    opacity: .85;
  }

  input, select {
    width: 100%;
    padding: 12px;
    background: rgba(255,255,255,0.08);
    border: 1px solid rgba(255,255,255,0.18);
    border-radius: 12px;
    color: white;
    outline: none;
    font-size: 15px;
    margin-bottom: 8px;
  }

  input:focus, select:focus {
    border-color: #6ab8ff;
  }

  .btn-main {
    background: linear-gradient(135deg,#3a8bff,#6aa7ff);
    padding: 12px 24px;
    border-radius: 50px;
    font-weight: 700;
    border: none;
    cursor: pointer;
    color: #fff;
    width: 100%;
    margin-top: 15px;
    box-shadow: 0 6px 20px rgba(60,120,255,0.4);
    transition: .25s;
  }

  .btn-main:hover {
    transform: translateY(-3px);
  }

  /* ستون سمت چپ – لیست تمپلیت‌ها */
  .templates-box {
    flex: 1;
    height: fit-content;
  }

  .template-item {
    padding: 18px;
    background: rgba(255,255,255,0.07);
    border-radius: 15px;
    margin-bottom: 15px;
    border: 1px solid rgba(255,255,255,0.1);
  }

  .template-title {
    font-weight: 700;
    color: #8ab8ff;
  }

  .template-sub {
    opacity: .75;
    font-size: 14px;
  }

  .header-links {
    text-align: center;
    margin-bottom: 20px;
  }

  .header-links a {
    color: #8ab8ff;
    text-decoration: none;
    font-size: 15px;
    font-weight: 600;
  }
</style>
</head>

<body>

<div class="page-wrapper">

  <!-- ستون راست (فرم) -->
  <div class="glass form-box">

    <h2>ایجاد برنده جدید</h2>

    <form method="POST" action="/dashboard/lottery/create-winner">

      <label>نام و نام خانوادگی</label>
      <input type="text" name="fullName" required>

      <label>شماره تماس</label>
      <input type="text" name="phone" required>

      <label>مبلغ یا نوع جایزه</label>
      <input type="text" name="prize" required>

      <label>تاریخ اعلام برنده</label>
      <input type="date" name="winDate" id="winDateInput">

      <label>انتخاب تمپلیت</label>
      <select name="templateId" required>
        <option value="">انتخاب کنید…</option>
        <% templates.forEach(t => { %>
          <option value="<%= t.id %>"><%= t.title %></option>
        <% }) %>
      </select>

      <button class="btn-main">ثبت برنده</button>
    </form>

  </div>

  <!-- ستون چپ (لیست تمپلیت‌ها) -->
  <div class="glass templates-box">

    <h3 style="color:#8ab8ff;margin-bottom:18px;">لیست تمپلیت‌ها</h3>

    <% templates.forEach(t => { %>
      <div class="template-item">
        <div class="template-title"><%= t.title %></div>
        <div class="template-sub">شرکت: <%= t.companyName %></div>
        <div class="template-sub">تاریخ: <%= t.dateText %></div>
      </div>
    <% }) %>

  </div>

</div>

<script>
  (function() {
    const input = document.getElementById('winDateInput');
    if (input && !input.value) {
      const today = new Date();
      const yyyy = today.getFullYear();
      const mm = String(today.getMonth() + 1).padStart(2, '0');
      const dd = String(today.getDate()).padStart(2, '0');
      input.value = `${yyyy}-${mm}-${dd}`;
    }
  })();
</script>

</body>
</html>
