<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    body { margin:0; font-family: Vazirmatn, sans-serif; background: linear-gradient(135deg,#0d0f1b,#101524,#0f172e); color: #fff; min-height: 100vh; }
    .wrapper { max-width: 960px; margin: 0 auto; padding: 40px 18px 80px; }
    .hero { display:flex; align-items:center; justify-content:space-between; gap:16px; background: rgba(255,255,255,0.06); border:1px solid rgba(255,255,255,0.12); border-radius:18px; padding:18px; margin-top:30px; }
    .hero img { height:64px; }
    h1 { margin: 0 0 12px 0; color: #7ec7ff; }
    p { line-height: 1.9; opacity: .9; }
    .card { background: rgba(255,255,255,0.05); border:1px solid rgba(255,255,255,0.1); border-radius:16px; padding:18px; margin-top:14px; }
  </style>
</head>
<body>
  <div class="wrapper">
    <div class="hero">
      <div>
        <h1><%= title %></h1>
        <p><%= subtitle || '' %></p>
      </div>
      <div style="display:flex; gap:10px; align-items:center;">
        <img src="/public/image/Lum.png" alt="lum">
        <img src="/public/image/imam.png" alt="imam">
      </div>
    </div>

    <% sections.forEach(function(sec){ %>
      <div class="card">
        <h3 style="margin-top:0; color:#9ed5ff;"><%= sec.title %></h3>
        <p><%= sec.body %></p>
      </div>
    <% }); %>

    <% if (links && links.length) { %>
      <div class="card">
        <h3 style="margin-top:0; color:#9ed5ff;">لینک‌های مرتبط</h3>
        <ul>
          <% links.forEach(function(link){ %>
            <li><a href="<%= link.href %>" style="color:#9ed5ff;"> <%= link.label %> </a></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
  </div>
</body>
</html>
