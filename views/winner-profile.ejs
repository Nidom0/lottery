<%- include('partials/navbar') %>

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
<meta charset="UTF-8">
<title>پروفایل مشتری</title>

<link href="https://fonts.googleapis.com/css2?family=Vazir:wght@300;400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
  body {
    margin: 0;
    background: linear-gradient(135deg,#0d0f1b,#13172b,#141a33);
    font-family: Vazir;
    color: #fff;
  }

  .container {
    max-width: 1100px;
    margin: 130px auto;
    padding: 20px;
  }

  .glass {
    background: rgba(255,255,255,0.07);
    backdrop-filter: blur(18px);
    border: 1px solid rgba(255,255,255,0.14);
    border-radius: 22px;
    padding: 25px;
    margin-bottom: 25px;
    box-shadow: 0 12px 32px rgba(0,0,0,0.4);
  }

  .profile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .avatar-box {
    width: 140px;
    height: 140px;
    background: rgba(255,255,255,0.1);
    border-radius: 16px;
    overflow: hidden;
  }

  .avatar-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .btn-main {
    padding: 10px 22px;
    background: linear-gradient(135deg,#3a88ff,#6aa7ff);
    border-radius: 50px;
    border: none;
    font-weight: 700;
    cursor: pointer;
    box-shadow: 0 6px 20px rgba(60,120,255,0.4);
    color: #fff;
    text-decoration: none;
    margin-top: 15px;
    display: inline-block;
  }

  .docs-box ul {
    list-style: none;
    padding: 0;
  }

  .docs-box li {
    padding: 10px;
    border-bottom: 1px solid rgba(255,255,255,0.08);
  }

  .danger-btn {
    background: #ff5f5f !important;
    box-shadow: 0 6px 20px rgba(255,50,50,0.35) !important;
  }
</style>

</head>

<body>

<div class="container">

  <div class="glass profile-header">

    <div>
      <h2><%= customer.fullName %></h2>
      <p style="opacity:.7">موبایل: <%= customer.phone %></p>
      <p style="opacity:.7">تاریخ اعلام: <%= customer.winDate || '—' %></p>
      <p style="opacity:.7">کد ثبت‌نام: <%= customer.registrationCode || '—' %> (<%= customer.registrationUsed ? 'استفاده شده' : 'آماده' %>)</p>

      <a href="/winner/<%= customer.linkId %>" class="btn-main">
        ورود مشتری
      </a>

      <form action="/dashboard/lottery/delete/<%= customer.id %>" 
            method="POST" 
            style="margin-top:12px;">
        <button class="btn-main danger-btn">حذف برنده</button>
      </form>
    </div>

    <div class="avatar-box">
      <% if(customer.avatar) { %>
        <img src="<%= customer.avatar %>">
      <% } else { %>
        <img src="/public/image/default-user.png">
      <% } %>
    </div>

  </div>

  <div class="glass docs-box">

    <h3>اطلاعات بانکی و هویتی</h3>
    <ul>
      <li>شماره کارت: <%= customer.cardNumber || '—' %></li>
      <li>شماره شبا: <%= customer.shaba || '—' %></li>
      <li>کد ملی: <%= customer.nationalId || '—' %></li>
      <li>تاریخ تولد: <%= customer.birthDate || '—' %></li>
      <li>توضیحات: <%= customer.description || '—' %></li>
    </ul>

  </div>

  <div class="glass docs-box">

    <h3>مدارک ارسال‌شده توسط مشتری</h3>

    <% if (docs.length === 0) { %>
      <p style="opacity:.6">مدرکی توسط مشتری ارسال نشده است.</p>
    <% } %>

    <ul>
      <% docs.forEach(d => { %>
        <li>
          <a href="<%= d.file %>" target="_blank" style="color:#7ec7ff;">مشاهده مدرک</a>
          — <%= new Date(d.date).toLocaleString("fa-IR") %>
        </li>
      <% }) %>
    </ul>

  </div>

</div>

</body>
</html>
